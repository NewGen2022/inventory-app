<div id="sidebar">
    <a href="/allItems"
        ><div
            class="nav-item <%= activePage === 'all-items' ? 'active' : '' %>"
        >
            All items
        </div>
    </a>
    <% allCategories.forEach(category => { %>
    <a href="/allItems/category/<%= category.id %>">
        <div
            class="nav-item <%= parseInt(activePage) === category.id ? 'active' : '' %>"
        >
            <%= category.name %>
        </div>
    </a>
    <% }) %>
    <div id="horizontal-line"></div>
    <a href="/form/category/create"
        ><div
            class="nav-item <%= activePage === 'addCategoryForm' ? 'active' : '' %>"
        >
            Add category
        </div>
    </a>

    <a href="/form/item/create"
        ><div
            class="nav-item <%= activePage === 'addItemForm' ? 'active' : '' %>"
        >
            Add item
        </div>
    </a>

    <a href="/form/category/delete"
        ><div
            class="nav-item <%= activePage === 'deleteCategoryForm' ? 'active' : '' %>"
        >
            Delete category
        </div>
    </a>
</div>
